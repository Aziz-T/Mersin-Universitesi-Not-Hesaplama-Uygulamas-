<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e0e0e0"
    android:padding="5dp"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/dersLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ders 1"
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_margin="5dp"
        android:layout_gravity="center"/>


        <TextView
            android:id="@+id/vizeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vize Notu(%40):"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_margin="5dp"
            />

        <TextView
            android:id="@+id/finalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Final/Büt(%60):"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_margin="5dp"

            />

        <TextView
            android:id="@+id/krediText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dersin Kredisi:"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_margin="5dp"
            />
    <TextView
        android:id="@+id/ortalamaText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ortalama:"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_margin="5dp"
        />
    <TextView
        android:id="@+id/gecmeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Geçmek için gereken azami not:"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_margin="5dp"
        />



    </LinearLayout>




